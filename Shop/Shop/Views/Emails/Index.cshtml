@model Shop.Models.Emails.EmailViewModel

<div class="taust">
    <div class="container">
        <form method="post">
            <div class="container">
                <div>
                    <h2>Send an email</h2>
                    <h4>Through Gmail</h4><br />
                    <label  class="form-label">Recipient</label>
                    <input type="email" asp-for="To" class="form-control" placeholder="example@gmail.com" />
                    <br />
                    <label class="form-label">Subject</label>
                    <input asp-for="Subject" class="form-control"  />
                    <br />
                    <label  class="form-label">Message</label>
                    <textarea rows="6" cols="40" asp-for="Body"></textarea>
                </div>
            </div>
            <p>

            </p>
            <div>
                <div class="container">
                    <div>
                        <button asp-controller="Emails" asp-action="SendEmail" class="btn btn-primary">Send</button>
                    </div>
                </div>
            </div>
        </form>

    </div>
</div>
