@model Shop.Models.Coctails.CoctailSearchViewModel

<h1>Search Coctail</h1>
<div class="container">
    <form method="post">
        <div class="container">
            <div class="form-group col-md-offset-3 col-md-5">
                <h2>Search </h2>
                <label asp-for="SearchCocktail" style="font-family:Arial"></label>
                <input asp-for="SearchCocktail" class="form-control" />
                <span asp-validation-for="SearchCocktail" class="text-danger"></span>
            </div>
        </div>
       <div class="container">
            <div class="form-group col-md-offset-3 col-md-5">
                <button asp-controller="coctails" asp-action="SearchCoctail" class="btn btn-primary ">Search</button>
            </div>
        </div>
    </form>
</div>
